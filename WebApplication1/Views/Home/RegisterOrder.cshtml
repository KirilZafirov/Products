@model  WebApplication1.ViewModels.OrderViewModel
@{
   ViewData["Title"] = "Home Page";
}
<div>
    <h2>Order registration</h2>
</div>

<form asp-controller="Home" action="/RegisterOrder" method="post">
    <label>Register Order</label>
    <div class="row">
        <div class="col-md-4">
            <h3>Pick up from</h3>
            <div class="form-group">
              
                <label for="PickupName">Pickup Name:</label>
                <input type="text" name="PickupName" value="" class="form-control"/>
            </div>
            <div class="form-group">
                <label for="PickupAddress">Pickup Address:</label>
                <input type="text" name="PickupAddress" value="" class="form-control"/>
            </div>
            <div class="form-group">
                <label for="PickupCity">Pickup City:</label>
                <input type="text" name="PickupCity" value="" class="form-control"/>
            </div>
        </div>
        <div class="col-md-4">
            <h3>Deliver to</h3>
            <div class="form-group">
                <label for="DeliverName">Deliver Name:</label>
                <input type="text" name="DeliverName" value="" class="form-control"/>
            </div>
            <div class="form-group">
                <label for="DeliverAddress">Deliver Address:</label>
                <input type="text" name="DeliverAddress" value="" class="form-control"/>
            </div>
            <div class="form-group">
                <label for="DeliverCity">Deliver City:</label>
                <input type="text" name="DeliverCity" value="" class="form-control"/>
            </div>
        </div>
        <div class="col-md-4">
            <h3>Package info</h3>
            <div class="form-group">
                <label for="Weight">Weight:</label>
                <input type="number" name="Weight" value="" class="form-control"/>
            </div>
            <div class="form-group">
                <label for="Fragile">Fragile:</label>
                <input type="checkbox" name="Fragile" value="" class="form-control"/>
            </div>
            <div class="form-group">
                <label for="Oversized">Oversized:</label>
                <input type="checkbox" name="Oversized" value="" class="form-control"/>
            </div>
        </div>
    </div>
    <input type="submit" class="btn btn-info" value="Submit"/>
</form>
